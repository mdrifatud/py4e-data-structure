# Use the file name mbox-short.txt as the file name
fname = input("Enter file name: ")
fh = open(fname)
counter = 0
sline = 0
for line in fh:
    if not line.startswith("X-DSPAM-Confidence:") :
        continue
    counter = counter + 1
    s = line.find('0')
    eline = line[s:]
    sline = float(eline)+float(sline)
zline = sline/counter
print("Average spam confidence:",zline)
